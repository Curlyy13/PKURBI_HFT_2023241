<Window x:Class="PKURBI_HFT_2023241.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKURBI_HFT_2023241.WpfClient"
        mc:Ignorable="d"
        Title="RealEstate Window" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding RealEstates}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" SelectedItem="{Binding SelectedRealEstate}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Background="Azure">
                        <Label Content="{Binding RealEstateId}" ContentStringFormat="ID: {0}" HorizontalAlignment="Left"/>
                        <Label Content="{Binding RealEstateCity}" ContentStringFormat="City: {0}" HorizontalAlignment="Center" />
                        <Label Content="{Binding RealEstateValue}" ContentStringFormat="Value: {0}" HorizontalContentAlignment="Right" HorizontalAlignment="Right"/>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Label Content="City" HorizontalAlignment="Stretch" Padding="10"/>
            <TextBox Text="{Binding SelectedRealEstate.RealEstateCity}" Padding="10"/>
            <Label Content="BasicArea" HorizontalAlignment="Stretch" Padding="10"/>
            <TextBox Text="{Binding SelectedRealEstate.BasicArea}" Padding="10"/>
            <Label Content="Value" HorizontalAlignment="Stretch" Padding="10"/>
            <TextBox Text="{Binding SelectedRealEstate.RealEstateValue}" Padding="10"/>
            <Button Content="Create" Command="{Binding CreateRealEstateCommand}" Padding="10" Margin="0,0,0,10"/>
            <Button Content="Delete" Command="{Binding DeleteRealEstateCommand}" Padding="10" Margin="0,0,0,10"/>
            <Button Content="Update" Command="{Binding UpdateRealEstateCommand}" Padding="10" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
