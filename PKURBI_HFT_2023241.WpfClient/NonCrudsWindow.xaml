<Window x:Class="PKURBI_HFT_2023241.WpfClient.NonCrudsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKURBI_HFT_2023241.WpfClient"
        xmlns:viewmodels="clr-namespace:PKURBI_HFT_2023241.WpfClient.WindowViewModels"
        mc:Ignorable="d"
        Title="NonCrudsWindow" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow">
    <Window.DataContext>
        <viewmodels:NonCrudsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Aqua" BorderThickness="0.5">
            <StackPanel Grid.Column="0">
                <Label Content="AvgPriceBySalespersonId" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="20"/>
                <Label Content="Enter the ID: " HorizontalContentAlignment="Center" FontSize="15"/>
                <TextBox Text="{Binding SalesId}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="2" Margin="10,5,10,10"/>
                <Button Content="Send" Command="{Binding AvgPriceBySalespersonCommand}" FontWeight="SemiBold" Width="50"/>
                <Label Content="{Binding AvgPrice}" ContentStringFormat="Átlagár: {0}" FontSize="25" HorizontalContentAlignment="Center" Padding="20" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Aqua" BorderThickness="0.5" Grid.Column="1">
            <StackPanel>
                <Label Content="BasicInformation" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="20"/>
                <Label Content="Enter the ID: " HorizontalContentAlignment="Center" FontSize="15"/>
                <TextBox Text="{Binding EstateId}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="2" Margin="10,5,10,10"/>
                <Button Content="Send" Command="{Binding BasicInformationCommand}" FontWeight="SemiBold" Width="50" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.Location}" ContentStringFormat="Location: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.Value}" ContentStringFormat="Value: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.Area}" ContentStringFormat="Area: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.Salesperson}" ContentStringFormat="Salesperson: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.Tenant}" ContentStringFormat="Tenant: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
                <Label Padding="5" Content="{Binding Info.TenantContact}" ContentStringFormat="Contact: {0}" FontSize="25" HorizontalContentAlignment="Stretch"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Aqua" BorderThickness="0.5" Grid.Column="2">
            <StackPanel>
                <Label Content="AvgPriceByCity" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="20"/>

            </StackPanel>
        </Border>
        <Border BorderBrush="Aqua" BorderThickness="0.5" Grid.Column="3">
            <StackPanel>
                <Label Content="MostRealEstates" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="20"/>

            </StackPanel>
        </Border>
        <Border BorderBrush="Aqua" BorderThickness="0.5" Grid.Column="4">
            <StackPanel>
                <Label Content="TenantsByCity" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="20"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
